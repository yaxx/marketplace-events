    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
